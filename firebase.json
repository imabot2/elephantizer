{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/en/index.html"
      },
      {
        "source": "/quiz/**",
        "destination": "/en/index.html"
      },
      {
        "source": "/en/quiz/**",
        "destination": "/en/index.html"
      },
      {
        "source": "/fr/quiz/**",
        "destination": "/fr/index.html"
      }
    ]
  }
}